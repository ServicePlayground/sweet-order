{
  "name": "sweet-order",
  "private": true,
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "apps/*/*",
    "apps/backend",
    "apps/web-user",
    "apps/web-seller",
    "apps/web-admin",
    "packages/*"
  ],
  "scripts": {
    "common:lint": "eslint --cache --max-warnings=0 .",
    "common:lint:fix": "eslint --cache --fix .",
    "common:format": "prettier --write .",
    "common:format:check": "prettier --check .",
    "common:sdks": "yarn dlx @yarnpkg/sdks vscode",
    "backend:dev": "yarn workspace @sweet-order/backend dev",
    "backend:build:staging": "yarn workspace @sweet-order/backend build:staging",
    "backend:build:production": "yarn workspace @sweet-order/backend build:production",
    "postinstall": "yarn workspace @sweet-order/backend postinstall",
    "db:reset:dev": "yarn workspace @sweet-order/backend db:reset:dev",
    "db:migrate:dev": "yarn workspace @sweet-order/backend db:migrate:dev",
    "db:migrate:deploy": "yarn workspace @sweet-order/backend db:migrate:deploy",
    "db:seed:dev": "yarn workspace @sweet-order/backend db:seed:dev",
    "db:studio:dev": "yarn workspace @sweet-order/backend db:studio:dev",
    "web-user:dev": "yarn workspace @sweet-order/web-user dev",
    "web-user:build": "yarn workspace @sweet-order/web-user build",
    "web-user:start": "yarn workspace @sweet-order/web-user start"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "prettier": "^3.0.0",
    "typescript": "5.5.4"
  },
  "resolutions": {
    "@types/passport": "1.0.17"
  }
}
