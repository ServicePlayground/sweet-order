{
  "name": "sweet-order",
  "private": true,
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "apps/*",
    "apps/*/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "staging": "turbo run staging --parallel",
    "production": "turbo run production --parallel",
    "build:dev": "turbo run build:dev",
    "build:staging": "turbo run build:staging",
    "build:production": "turbo run build:production",
    "serve:dev": "turbo run serve:dev",
    "serve:staging": "turbo run serve:staging",
    "serve:production": "turbo run serve:production",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  }
}
