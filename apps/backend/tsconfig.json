{
  // NestJS 백엔드 전용 오버라이드 설정
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // 최신 런타임 문법 타깃
    "target": "ES2022",
    // 런타임 라이브러리: 백엔드 중심이라 DOM 제외
    "lib": ["ES2022"],
    // NestJS/Node 실행을 위한 CJS 출력
    "module": "CommonJS",
    // Node 해석 규칙 사용
    "moduleResolution": "node",
    // 추가하지 말기!!!
    //"composite": true,
    "rootDir": "./src",
    // outDir을 여기서 선언하지 않으면, 현재 프로젝트 경로에서 import시 인식을 제대로 못하는 문제가 있음
    "outDir": "./dist",
    // tsc가 실제 JS 출력하도록 (필수)
    "noEmit": false,
    // Nest 데코레이터 사용을 위한 필수 옵션
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Nest 엔티티/DTO 초기화 유연성 확보
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@apps/backend/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
