{
  "name": "@sweet-order/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nest start --watch",
    "build:staging": "NODE_ENV=staging nest build",
    "build:production": "NODE_ENV=production nest build",
    "postinstall": "prisma generate --schema ./src/infra/database/prisma/schema.prisma",
    "db:reset:dev": "dotenv -e ./.env.development -- prisma migrate reset --force --schema ./src/infra/database/prisma/schema.prisma",
    "db:migrate:dev": "dotenv -e ./.env.development -- prisma migrate dev --schema ./src/infra/database/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema ./src/infra/database/prisma/schema.prisma",
    "db:seed:dev": "dotenv -e ./.env.development -- ts-node -O '{\"module\":\"CommonJS\"}' src/infra/database/prisma/seed.ts",
    "db:studio:dev": "dotenv -e ./.env.development -- prisma studio --schema ./src/infra/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "6.16.3",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.3.1",
    "@types/passport": "1.0.17",
    "@types/passport-jwt": "^4",
    "dotenv-cli": "^7.4.1",
    "prisma": "6.16.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
