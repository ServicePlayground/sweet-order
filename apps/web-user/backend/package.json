{
  "name": "@sweet-order/web-user-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nest start --watch",
    "staging": "NODE_ENV=staging nest start --watch",
    "build:staging": "NODE_ENV=staging nest build",
    "build:production": "NODE_ENV=production nest build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:reset:dev": "dotenv -e .env.development -- prisma migrate reset",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:seed:dev": "dotenv -e .env.development -- ts-node prisma/seed.ts",
    "db:studio:dev": "dotenv -e .env.development -- prisma studio",
    "db:deploy:staging": "dotenv -e .env.staging -- prisma migrate deploy",
    "db:deploy:production": "dotenv -e .env.production -- prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.16.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.3.1",
    "@types/passport": "^0",
    "@types/passport-jwt": "^4",
    "@types/pg": "^8.15.5",
    "dotenv-cli": "^10.0.0",
    "ts-node": "^10.9.2"
  }
}
